<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">	<!-- 指定日志输出的位置 -->
		<encoder>
			<!-- 日志输出的格式 ： 按照顺序分别是： 时间、 日志级别[%-5 是占5个字符]、 线程名称、 打印日志的类、 日志主体 内容、 换行-->
			<pattern>[%d{HH:mm:ss.SSS}] [%-5level] [%thread] [%logger] [%msg]%n</pattern>
		</encoder>
	</appender>
	
	<!-- 设置全局日志级别。 日志级别按顺序分别是： DEBUG、 INFO、 WARN、 ERROR -->
	<root level="INFO">
		<appender-ref ref="STDOUT" />  <!-- 指定打印日志的 appender， 这里通过“STDOUT”引用了前面配置的 appender -->
	</root>
	
	<!-- 设置 指定位置 的 日志级别 -->
	<logger name="com.atguigu.crowd.mapper" level="DEBUG" />
	<logger name="com.atguigu.crowd.test" level="DEBUG" />
	
</configuration>